# AI Recipe Generator Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS
# =============================================================================

# Google Gemini API Key - Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database connection URL for local development
DATABASE_URL=postgresql://recipe_user:recipe_pass@localhost:5432/recipes_db

# Database credentials (used by docker-compose)
POSTGRES_DB=recipes_db
POSTGRES_USER=recipe_user
POSTGRES_PASSWORD=recipe_pass

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Frontend API URL (for React app)
REACT_APP_API_URL=http://localhost:8000

# Backend host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# =============================================================================
# SECURITY (Production Only)
# =============================================================================

# JWT Secret for authentication (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# CORS origins (comma-separated URLs allowed to access the API)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG=true

# Session secret for cookie signing
SESSION_SECRET=your_session_secret_here
